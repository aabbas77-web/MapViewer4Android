<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/pressed_color" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <solid android:color="@color/pressed_color" />
        </shape>
    </item>

    <item android:drawable="@color/selected_color" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <solid android:color="@color/selected_color" />
        </shape>
    </item>

    <item android:drawable="@color/transparent" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item android:drawable="@color/focused_color" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <solid android:color="@color/focused_color" />
        </shape>
    </item>
</selector>
