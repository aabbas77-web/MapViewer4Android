                            android:id="@+id/cam_localize"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center"
                            android:text="@string/localize" />

                        <Button
                            android:id="@+id/cam_calibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center"
                            android:text="@string/calibrate" />

                        <Button
                            android:id="@+id/b_cam_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/reset" />

                        <Button
                            android:id="@+id/b_gimbal_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/gimbal_reset"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/b_camera_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/settings"
                            android:visibility="visible" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </RelativeLayout>

        <com.oghab.mapviewer.mapviewer.FrameView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>