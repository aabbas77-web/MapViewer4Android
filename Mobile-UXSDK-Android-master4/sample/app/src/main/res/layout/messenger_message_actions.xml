<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_delete_message"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:padding="3dp"
        android:src="@drawable/delete_user"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_save_message"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:padding="3dp"
        android:src="@drawable/save_message_icon"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_replay_message"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="1dp"
        android:padding="3dp"
        android:src="@drawable/replay_icon"/>

</LinearLayout>
