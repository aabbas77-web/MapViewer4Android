<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b_back"
                android:background="@drawable/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:text=""
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_active_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/customborder3"
                android:gravity="center_horizontal|center_vertical"
                android:text="Guest"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

            <CheckBox
                android:id="@+id/cb_send_voice_to_server_main"
                android:background="@drawable/checked_voice"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="" />

            <CheckBox
                android:id="@+id/sw_receive"
                android:background="@drawable/customborder_gray"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:checked="true"
                android:text="@string/receive" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:background="@drawable/customborder_green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:gravity="center_vertical"
                android:orientation='horizontal'>

                <ImageView
                    android:id="@+id/b_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    app:strokeColor="#ff0000"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/settings_icon48"
                    android:contentDescription="MapViewer"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="3dp"
                    android:padding="1dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#FF0000FF" />

<!--                <Button-->
<!--                    android:id="@+id/b_settings"-->
<!--                    android:background="@drawable/settings_icon48"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="42dp"-->
<!--                    android:text="" />-->

                <RadioButton
                    android:id="@+id/radio_map"
                    android:background="@drawable/radio_map"
                    android:button="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checked="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text=""/>

                <RadioButton
                    android:id="@+id/radio_camera"
                    android:background="@drawable/radio_camera"
                    android:button="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="" />

                <RadioButton
                    android:id="@+id/radio_messenger"
                    android:background="@drawable/radio_messenger"
                    android:button="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="" />

                <RadioButton
                    android:id="@+id/radio_main"
                    android:background="@drawable/radio_main"
                    android:button="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="" />

            </RadioGroup>

            <ImageView
                android:id="@+id/b_exit"
                android:background="@drawable/close_app_icon"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/exit" />

            <ImageView
                android:id="@+id/b_screen_shot"
                android:background="@drawable/screenshots_icon"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/screenshot" />

            <ImageView
                android:id="@+id/b_refresh"
                android:background="@drawable/refresh_icon"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/refresh" />

            <ImageView
                android:id="@+id/b_about"
                android:background="@drawable/about_icon"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/about" />

    </LinearLayout>

    </HorizontalScrollView>

    <ViewFlipper
        android:id="@+id/ViewFlipper01"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/id_tab_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/id_tab_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/id_tab_messenger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/id_tab_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ViewFlipper>

</LinearLayout>

